<section class="hero py-16">
    <div class="container flex mx-auto items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em> &nbsp; &nbsp;Are you hungry</em></h6>
            <h1 class="text-6xl font-bold">Don't wait !</h1>
            <button class=" btn-primary px-6 py-2 rounded-full font-cold text-white mt-4">
                Order now
            </button>
        </div>
        <div class="w-1/2">
            <img src="img/vegetables.png" alt="">
        </div>
    </div>
</section>

<section class=" menu continer mx-auto px-8 py-8">
    <h1 class="text-xl font-bold mb-8">All Items</h1>


    <div class="grid grid-cols-4 gap-x-12 gap-y-12">

        <% allmenu.forEach(function(mymenu){ %>
            <div class="w-64">
                <img class="h-40 mx-auto mb-4" src="img/<%= mymenu.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg "><%= mymenu.name%></h2>
                    <span class=" size py-1 px-4 rounded-full uppercase text-xs"> <%= mymenu.size %>  </span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg"> <%= mymenu.price %>  </span>
                        <button data-items="<%= JSON.stringify(mymenu) %> " class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>


    </div>

</section>