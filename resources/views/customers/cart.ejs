<section class="cart py-8">

    <!--THIS IS FOR NON-EMPTY CART-->
    <% if(session.cart) {%>
        <div class="order container mx-auto w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img class="h-10" src="/img/cart.png" alt="">
                <h1 class="font-bold text-2xl ml-4">Order summary</h1>
            </div>


            <div class="item-list">
                <% for(let myitem of Object.values(session.cart.items)) {%>
                    <div class="flex items-center my-4">
                        <img class="w-32" src="/img/<%= myitem.item.image%>" alt="">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= myitem.item.name%>
                            </h1>
                            <span>
                                <%= myitem.item.size%>
                            </span>
                        </div>
                        <span class="flex-1">
                            <%= myitem.qty%>kg
                        </span>
                        <span class="font-bold text-lg">
                            <%= myitem.item.price * myitem.qty %>
                        </span>
                    </div>
                    <% } %>
            </div>
            

                <hr>

                <div class="text-right py-6">
                    <div>
                        <span class="text-lg font-bold ">
                            TOTAL AMOUNT:
                        </span>
                        <span class="amount text-2xl font-bold ml-2 ">
                            <%= session.cart.totalPrice %> Rs
                        </span>
                    </div>

                    <div>
                        <form action="" class="mt-4 ">
                            <input type="text" name="" id="" class="border border-gray-400 p-2 w-1/2"
                                placeholder="Phone number">
                            <input type="text" name="" id="" class="border border-gray-400 p-2 w-1/2 mt-1"
                                placeholder="Address">
                            <!-- <div>
                    <button class="btn-primary rounded-full px-6 py-2 text-white font-bold mt-4" type="submit">Order Now</button>
                </div> -->
                        </form>
                    </div>

                    <div>
                        <a href=""> <button
                                class="inline-block cursor-pointer btn-primary rounded-full px-6 py-2 text-white font-bold mt-4">
                                Login to continue
                            </button></a>
                    </div>
                </div>

        </div>
        <% } else{ %>
            <!--THIS IS FOR EMPTY CART-->
            <div class="empty-cart py-16">
                <div class="container mx-auto text-center ">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
                    <p class="text-gray-500 text-lg mb-12"> You probably haven't ordered any thing yet. <br>
                        To order any item, go to the <a href="/">HOME</a> page.
                    </p>

                    <img class="h-60 mx-auto" src="/img/vegetables.png" alt="Empty cart">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text whtie text-white font-bold 
        mt-4">GO BACK</a>

                </div>
            </div>

            <% } %>



</section>